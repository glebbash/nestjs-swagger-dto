    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "27.3.1",
    "jest-config": "27.3.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "semantic-release": "^18.0.0",
    "true-myth": "^4.1.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.8",
    "typescript": "^4.4.4"
