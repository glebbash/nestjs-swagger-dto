{
  "name": "nestjs-swagger-dto",
  "version": "0.0.0",
  "description": "Nestjs swagger dto decorators",
  "keywords": [
    "nestjs",
    "typescript",
    "swagger",
    "dto"
  ],
  "main": "dist/nestjs-swagger-dto.js",
  "types": "dist/nestjs-swagger-dto.d.ts",
  "files": [
    "dist"
  ],
  "author": "glebbash <glebbash@gmail.com>",
  "repository": {
